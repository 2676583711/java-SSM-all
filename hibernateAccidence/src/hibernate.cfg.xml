<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">


<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/zhou?useSSL=true </property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">zhou123</property>

		<property name="hibernate.connection.useUnicode">true</property>
		<property name="hibernate.connection.characterEncoding">UTF-8</property>


		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>

		<!-- 事务的隔离级别
		hibernate.connection.isolation=数字
		1-Read uncommitted isolation
		2-Read committed isolation
		4-Repeatable read isolation
		8-Serializable
		isolation -->

		<property name="hibernate.connection.isolation">4</property>

		<!-- <property name="hibernate.dialect">org.heibernate.dialect.MySqlDialect</property> -->
		<!-- <property name="hibernate.dialect">org.heibernate.dialect.MySQL5Dialect</property> -->

		<!--设置MySQL方言，如果是MySQL5.7及以上版本还需要额外设置引擎 -->
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>

		<property name="hibernate.connection.provider_class">
			org.hibernate.c3p0.internal.C3P0ConnectionProvider
		</property>
		<property name="hibernate.hbm2ddl.auto">update</property>
		
		<!--配置session为单线程  -->
		<property name="hibernate.current_session_context_class">thread</property>
		
		
		<mapping resource="cn/zhou/entity/User.xml" />

	</session-factory>
</hibernate-configuration> 



